{
  "name": "cordova-file-uris",
  "version": "0.2.0",
  "description": "Helper function for Cordova applications to create URIs to show device files within a WebView",
  "keywords": [
    "cordova",
    "iOS",
    "android",
    "file"
  ],
  "files": [
    "dist",
    "lib"
  ],
  "bugs": {
    "url": "https://github.com/Collaborne/cordova-file-uris/issues"
  },
  "main": "./lib/index.js",
  "scripts": {
    "compile": "babel --presets es2015 -d lib/ src/",
    "lint": "eslint lib",
    "build": "npm run build-dist && npm run build-min",
    "build-dist": "mkdir -p dist && browserify -r $npm_package_main:cordova-file-uris > dist/cordova-file-uris.js",
    "build-min": "uglifyjs dist/cordova-file-uris.js --comments -o dist/cordova-file-uris.min.js",
    "prepublish": "npm run compile && npm run build",
    "test": "mocha --recursive"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Collaborne/cordova-file-uris.git"
  },
  "author": "Collaborne <info@collaborne.com>",
  "license": "Apache 2",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "browserify": "~11.1.0",
    "eslint": "^2.13.1",
    "eslint-config-flickr": "~1.1.8",
    "expect": "1.14.0",
    "uglify-js": "2.6.2",
    "chai": "*",
    "mocha": "*"
  },
  "dependencies": {
    "urijs": "^1.18.4"
  }
}
